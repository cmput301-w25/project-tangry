<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <!-- Emotion Icon (selector drawable such as ic_angry_selector, etc.) -->
    <ImageView
        android:id="@+id/emotionIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_angry_selector"
        android:contentDescription="@string/emotion_icon" />

    <!-- Emotion Name -->
    <TextView
        android:id="@+id/emotionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/emotion_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary" />

</LinearLayout>